@model IEnumerable<YourNamespace.Models.Book>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Name Placeholder</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #fafafa;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .top-nav {
            width: 100%;
            background-color: #333;
            color: white;
            padding: 15px;
            text-align: center;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

            .top-nav a {
                color: white;
                margin: 0 15px;
                text-decoration: none;
            }

        .container {
            display: flex;
            flex: 1;
            width: 150%;
            margin-top: 15px;
        }

        .sidebar {
            width: 200px;
            background-color: #f0e2d6;
            padding-top: 20px;
            padding-left: 20px;
            text-align: left;
            position: fixed;
            top: 60px;
            bottom: 0;
            left: 0;
            overflow-y: auto;
        }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
            }

            .sidebar li {
                display: flex;
                align-items: center;
                margin-bottom: 15px;
            }

            .sidebar img {
                width: 30px;
                height: 30px;
                margin-right: 10px;
            }

        .main-content {
            margin-left: 200px;
            padding: 20px;
            width: calc(100% - 200px);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f0e2d6;
            padding: 20px 30px;
            border-radius: 15px;
            margin-bottom: 20px;
            font-size: 1.8em;
        }

        .store-name {
            font-size: 2em;
            margin-right: 20px;
        }

        .search-bar {
            display: flex;
            align-items: center;
            gap: 5px;
        }

            .search-bar input[type="text"] {
                padding: 10px;
                font-size: 16px;
                width: 250px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .search-bar button {
                background-color: transparent;
                border: none;
                cursor: pointer;
                font-size: 20px;
            }

        .profile-btn {
            margin-left: 10px;
            cursor: pointer;
            font-size: 20px;
        }

        .book-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: 0 auto;
            padding-bottom: 20px;
        }

        .book-item {
            border: 1px solid #ddd;
            padding: 15px;
            text-align: center;
            background-color: #f4e1d2;
            box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.15);
            border-radius: 8px;
        }

        .book-image img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .book-title {
            font-weight: bold;
            margin-top: 15px;
            font-size: 1.2em;
        }

        .footer {
            text-align: center;
            padding: 10px;
            background-color: #f0e2d6;
            width: calc(100% - 200px);
            margin-left: 200px;
        }
    </style>
</head>
<body>
    <div class="top-nav">
        <a href="/">Home</a>
        <a href="/Home/About">About</a>
        <a href="/Home/Contact">Contact</a>
        <a href="#">Categories</a>
        <a href="/Books/Index">Books</a>
        <a href="/User">Profile</a>
    </div>

    <div class="container">
        <aside class="sidebar">
            <ul>
                <li><img src="/images/icon1.png" alt="Category 1"> <span>Category 1</span></li>
                <li><img src="/images/icon2.png" alt="Category 2"> <span>Category 2</span></li>
                <li><img src="/images/icon3.png" alt="Category 3"> <span>Category 3</span></li>
            </ul>
        </aside>

        <div class="main-content">
            <header class="header">
                <div class="store-name">Store Name Placeholder</div>
                <div class="search-bar">
                    <input type="text" placeholder="Search for a book...">
                    <button>🔍</button>
                    <span class="profile-btn">👤</span>
                </div>
            </header>

            <div class="book-grid">
                @foreach (var book in Model)
                {
                <div class="book-item">
                    <div class="book-image">
                        <img src="@Url.Content(book.ImageUrl)" alt="@book.Title" />
                    </div>
                    <div class="book-title">@book.Title</div>
                </div>
                }
            </div>
        </div>
    </div>

</body>
</html>