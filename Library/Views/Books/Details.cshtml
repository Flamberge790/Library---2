@model Library.Models.Book

@{
    ViewBag.Title = "Details";
}

<style>
    .details-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        font-family: 'Arial', sans-serif;
    }

    h2, h3 {
        color: #5a3e36;
        text-align: center;
    }

    dl {
        display: flex;
        flex-wrap: wrap;
        margin: 20px 0;
    }

    dt, dd {
        width: 50%;
        margin-bottom: 10px;
    }

    dt {
        font-weight: bold;
        color: #5a3e36;
    }

    dd {
        color: #333;
    }

    .tags-section {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #ddd;
    }

        .tags-section ul {
            list-style-type: none;
            padding: 0;
        }

            .tags-section ul li {
                display: inline-block;
                margin: 5px;
                padding: 5px 10px;
                background-color: #5a3e36;
                color: #fff;
                border-radius: 5px;
            }

    .action-links a {
        display: inline-block;
        margin: 10px 5px;
        padding: 10px 15px;
        background-color: #5a3e36;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
    }

        .action-links a:hover {
            background-color: #453026;
        }
</style>

<div class="details-container">
    <h2>Details</h2>

    <dl>
        <dt>Category</dt>
        <dd>@Html.DisplayFor(model => model.Category.Name)</dd>

        <dt>Title</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>

        <dt>Author</dt>
        <dd>@Html.DisplayFor(model => model.Author)</dd>

        <dt>Description</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>

        <dt>ISBN</dt>
        <dd>@Html.DisplayFor(model => model.ISBN)</dd>

        <dt>Publication Date</dt>
        <dd>@Html.DisplayFor(model => model.PublicationDate)</dd>

        <dt>Stock</dt>
        <dd>@Html.DisplayFor(model => model.Stock)</dd>
    </dl>

    <div class="tags-section">
        <h3>Tags</h3>
        @if (Model.BookTags != null && Model.BookTags.Any())
        {
            <ul>
                @foreach (var bookTag in Model.BookTags)
                {
                    <li>@bookTag.Tag.Name</li>
                }
            </ul>
        }
        else
        {
            <p>No tags assigned.</p>
        }

        @if (User.IsInRole("employee") || User.IsInRole("admin"))
        {
            <p>
                <a href="@Url.Action("AssignTag", new { bookId = Model.Id })">Add Tag</a>
            </p>
        }
    </div>

    <div class="action-links">
        @if (User.IsInRole("employee") || User.IsInRole("admin"))
        {
            <a href="@Url.Action("Edit", new { id = Model.Id })">Edit</a>
        }
        <a href="@Url.Action("Index")">Back to List</a>
    </div>
</div>
