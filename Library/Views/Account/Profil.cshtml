@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Profil";
    var currentDateTime = DateTime.Now;
}

<main aria-labelledby="title">
    <!-- Main header for profile page -->
    <div class="profile-header text-center">
        <h2 id="title">Profile</h2>
    </div>

    <!-- Display user profile information or prompt login -->
    <div class="profile-container text-center mt-4 p-4 border rounded shadow-sm bg-light">
        @if (User.Identity.IsAuthenticated)
        {
        <h4 class="text-primary">Welcome!</h4>
        <p class="text-secondary">Your email: <strong>@User.Identity.GetUserName()</strong></p>

        <!-- User custom details -->
        <div class="custom-details mt-4">
            <h5>Your Details</h5>
            <form enctype="multipart/form-data" action="@Url.Action(" UploadProfile", "Account" )" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="Name" class="form-control" placeholder="Enter your name" />
                </div>
                <div class="form-group mt-3">
                    <label for="surname">Surname:</label>
                    <input type="text" id="surname" name="Surname" class="form-control" placeholder="Enter your surname" />
                </div>
                <div class="form-group mt-3">
                    <label for="profilePicture">Profile Picture:</label>
                    <input type="file" id="profilePicture" name="ProfilePicture" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
            </form>
        </div>

        <!-- Current Date and Time -->
        <div class="current-date-time mt-4">
            <p>Current Date and Time: <strong>@currentDateTime.ToString("dddd, dd MMMM yyyy HH:mm:ss")</strong></p>
        </div>

        <!-- Change password link -->
        <div class="change-password-container text-center mt-4">
            <a href="@Url.Action(" ChangePassword", "Account" )" class="btn btn-warning">Change Password</a>
        </div>
        }
        else
        {
        <div class="unauthenticated-container">
            <h4 class="text-danger">You are not logged in.</h4>
            <p>Please log in or register to access your profile.</p>
            <div class="btn-group mt-3">
                <button class="btn btn-primary" onclick="window.location.href='@Url.Action(" Login", "Account" )'">Log in</button>
                <button class="btn btn-success" onclick="window.location.href='@Url.Action(" Register", "Account" )'">Register</button>
            </div>
        </div>
        }
    </div>
</main>

<style>
    .profile-header {
        margin-top: 20px;
    }

    .profile-container, .unauthenticated-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .profile-container {
        background-color: #f8f9fa;
    }

    .custom-details {
        background-color: #e9ecef;
        padding: 15px;
        border-radius: 5px;
        margin-top: 15px;
    }

    .current-date-time {
        background-color: #e9ecef;
        padding: 15px;
        border-radius: 5px;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
    }

    .btn-warning {
        color: #fff;
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-primary, .btn-success {
        font-weight: bold;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 10px;
    }
</style>
