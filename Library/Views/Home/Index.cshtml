@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Recently Added Books";
}

<style>
    
    .container-fullscreen {
        width: 100%;
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px; /* Białe tło dla głównej sekcji */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    h1 {
        font-family: 'Arial', sans-serif;
        color: #5a3e36; /* Ciepły odcień brązu */
        text-align: center;
        margin-bottom: 30px;
    }

    .book-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
    }

        .book-card img {
            max-width: 150px;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .book-card h5 {
            margin-top: 10px;
            color: #5a3e36;
        }

    .no-books {
        text-align: center;
        font-size: 1.2rem;
        color: #888;
    }
</style>

<div class="container-fullscreen">
    <h1>Recently Added Books</h1>

    @if (Model == null || !Model.Any())
    {
        <p class="no-books">No books available at the moment.</p>
    }
    else
    {
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-4 book-card">
                    <a href="@Url.Action("Details", "Books", new { id = book.Id })">
                        <img src="~/images/@(string.IsNullOrEmpty(book.BookCoverUrl) ? "default.jpg" : book.BookCoverUrl)"
                             alt="Book Cover" />
                    </a>
                    <h5>@book.Title</h5>
                </div>
            }
        </div>
    }
</div>
